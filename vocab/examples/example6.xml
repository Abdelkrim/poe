            <o:action name="http://www.w3.org/ns/odrl/2/pay"/>
            <o:constraint name="http://www.w3.org/ns/odrl/2/payAmount"
                operator="http://www.w3.org/ns/odrl/2/eq" rightOperand="1000.00" 
